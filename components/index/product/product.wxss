/* components/index/navCircle.wxss */
.product {
  display: flex;
  flex-direction: column;
  width: 350rpx;
  background-color: white;
  margin-bottom: 20rpx;
}

.product image {
  width: 350rpx;
  height: 350rpx;
  margin-bottom: 10rpx;
}

.product > text {
  line-height: 1.3;
  white-space: wrap;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.product  text {
  font-size: 24rpx;
}

.product > view {
  height: 50rpx;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.product > view > text:first-child {
  font-size:26rpx;
  font-weight: bold;
  color: #ff0105; 
}

.product > view > text:last-child {
  color: #9a9a9a;    
}

