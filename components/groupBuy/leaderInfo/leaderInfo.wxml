<view class="userInfo">
    <image class="bg" mode="widthFix" src="{{bgUrl}}"/>
    <view class="share">
        <view>
            <van-icon bindtap="explain" style="vertical-align: 1rpx; font-size: 55rpx; color: #ffffff;" name="warn"></van-icon>
            <button size="mini"  open-type="share"><van-icon  style="margin-left: 10rpx;margin-right: 10rpx;vertical-align: -2rpx;" name="share"></van-icon> <text>分享</text></button>    
        </view> 
        <view>
            <image bindtap="ringUp" class="head" src="{{profile}}"></image>
            <block wx:if="{{isOpen}}">
                <image class="hand" src="/static/icon/hand.png"></image>
                <text>点击团长头像询价参团</text>
            </block>
        </view>   
    </view>
</view>