.listItem {
  border-bottom: 1px solid #787878;
  padding-top: 20rpx;
}

.head {
  width: 60rpx; 
  height: 60rpx;
  border-radius: 50%;
}

.listItem > view {
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  word-break: break-all;
  line-height: 1.8;
}

.listItem .remark {
  background-color: #f2f2f2;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}