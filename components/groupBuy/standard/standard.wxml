<view class="standard">
    <view class="standard-title">规格列表</view>
    <scroll-view scroll-x class="standard-table">
        <view class="row">
            <view class="No">序号</view>
            <view class="SKU">SKU号</view>
            <view class="type">型号</view>
            <view class="count">数量</view>
            <view class="load">载重(kg)</view>
            <view class="sold">已售</view>
            
        </view>
        <block wx:for="{{skuList}}" wx:key="index">
            <view class="row">
                <view class="No">{{index}}</view>
                <view class="SKU">{{item.sku}}</view>
                <view class="type">{{item.type}}</view>
                <view class="count">
                <van-stepper min="0" integer max="100" step="1" value="{{ item.num }}" data-id="{{index}}" bind:change="handleChange"></van-stepper></view>
                <view class="load">{{item.weight}}</view>
                <view class="sold">{{item.saled}}</view>
                
            </view>
        </block>
    </scroll-view>
    <view class="myInfo">
        <view class="myInfo-title">我的信息</view>
        <view class="myInfo-ctn">
            <view>
                <view><text>姓名：</text><input bindchange="handleName" value="{{name}}" type="text"/><text style="width: 140rpx;">联系电话：</text></view>
                <view><text>备注：</text><input bindchange="handleRemark" value="{{remark}}" style="width: 360rpx;" type="text"/></view>     
            </view>
            <view>
                <view><input bindchange="handlePhone" value="{{phone}}" type="text"/></view>    
                <text class="myInfo-ctn-btn" bindtap="submit">确认参团</text>
            </view>
        </view>
    </view>
</view>