<view class="product">
    <view class="top">
        <image src="{{ctn.img}}"></image>
        <view class="text">
            <text>{{ctn.title}}</text>
            <view>
                <text wx:if="{{isOver}}">活动已经结束!</text>
                <text wx:if="{{!isOver && isIng}}">距离活动结束还有：</text>
                <text wx:if="{{!isOver && !isIng}}">距离活动开始还有：</text>
                <view wx:if="{{!isOver}}" class="time">
                    <block>
                        <view>{{day}}</view>天
                    </block>
                    <block>
                        <view>{{hour}}</view>时
                    </block> 
                    <block>
                        <view>{{min}}</view>分
                    </block> 
                    <block>
                        <view>{{sec}}</view>秒
                    </block>     
                </view>   
            </view>
        </view>
    </view>
    <view class="progress">
        <view class="barBg">
            <view class="bar" style="width: {{precent}}%;"></view>
            <image class="image1" wx:if="{{stage.prev}}" src="/static/icon/red-down.png"></image>
            <image class="image2" wx:if="{{stage.next}}" src="/static/icon/grey-down.png"></image>
            <image class="image3" wx:if="{{stage.final}}" src="/static/icon/grey-down.png"></image>
            <view class="stageCtn">
                <view class="stage1" wx:if="{{stage.prev}}"><view>达到{{stage.prev.limit}}台再减{{stage.prev.discount}}台</view></view>
                <view class="stage2" wx:if="{{stage.next}}"><view>达到{{stage.next.limit}}台再减{{stage.next.discount}}台</view></view>
                <view class="stage3" wx:if="{{stage.final}}"><view>达到{{stage.final.limit}}台再减{{stage.final.discount}}台</view></view>
            </view>
        </view>
    </view>
</view>