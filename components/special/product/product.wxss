.product {
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-top: 1px solid #e4e4e4;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.product image {
  width: 160rpx;
  height: 160rpx;
  flex: none;
  margin-right: 10rpx;
}

.product-ctn {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  font-size: 28rpx;
  height: 100%;
}

.product-ctn>view {
  flex: 1;
}

.product-ctn>view:last-child {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  width: 100%;
}

.selectBtn {
  background-color: #ffcc00;
  color: white;
  position: relative;
  border-radius: 25rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.selectBtn view {
  flex: none;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  text-align: center;
  font-size: 20rpx;
  position: absolute;
  background-color: #fe0000;
  color: white;
  border-radius: 50%;
  right: 0rpx;
  top: -10px;
}

.ctn-title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}