.shopCoupon {
  position: relative;
  margin-top: 30rpx;
}

.shopCoupon > image {
  width: 100%;
}

.shopCoupon .ctn {
  position: absolute;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx;
  height: 215rpx;
  width: 100%;
}

.shopCoupon .ctn image {
  width: 170rpx;
  height: 170rpx;
  flex: none;
  margin-right: 10rpx;
  margin-left: 20rpx;
}

.shopCoupon .ctn .detail {
  display: flex;
  flex-direction: column;
  flex: 3;
  font-size: 24rpx;
}

.shopCoupon .ctn .detail text:first-child {
  font-size: 36rpx;
  font-weight: bold;
}

.shopCoupon .ctn  .btn {
  flex: 2;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.shopCoupon .ctn  .btn button {
  font-size: 20rpx;
  align-self: flex-start;
  border-radius: 30rpx;
  border: none;
  background-color: #ff6600;
  color: white;
  margin-top: 20rpx;
}



/* common */
.common {
  color: #ff6600;
}

.limit {
  color: #7fc606;
}

.used, overdue {
  color: #999999;
}

button.common {
  background-color: #ff6600;
}

button.limit {
  background-color: #7fc606;
}