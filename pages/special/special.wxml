	<swiper class="swiper" indicator-dots="true">
		<block wx:for="{{swipers}}" wx:key="{{index}}">
			<swiper-item>
				<navigator url="{{ item.url }}" hover-class="className">
					<image mode="scaleToFill" src="http://imow-ht-test.oss-cn-hangzhou.aliyuncs.com/{{item.image}}" />
				</navigator>
			</swiper-item>
		</block>
