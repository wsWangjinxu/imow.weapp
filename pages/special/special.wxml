		<block wx:for="{{coupons}}" wx:key="index">
			<coupon ctn="{{item}}" class="coupon-item" />
		</block>
	</view>
	<bulletTitle title="{{'超级拼团'}}" bind:more="handleSuper" subTitle="{{'拼团一天，划算半年'}}" />
	<view class="super-group-ctn" style="height: {{groupHeight}};">
		<block wx:for="{{superGroupBuy}}" wx:key="index">
			<superGroup ctn="{{item}}" />
		</block>
	</view>
	<view class="shop-list">
		<view class="list-title">
			<view>{{selectedShop.shopName}}</view>
			<view bindtap="gotoShop">进入店铺，了解更多产品信息</view>
		</view>
		<view class="shop-ctn">
			<scroll-view class="left" scroll-y="true" style="height: {{scrollHeight}}px;">
				<block wx:for="{{shopList}}" wx:key="index">
					<view
					 class="shopname"
					 style="background-color:{{selectedShop.shopId == item.shopId ? 'white' : '3e4e4e4'}}"
					 bindtap="handleListChange"
					 data-id="{{item.shopId}}"
					 data-shopName="{{item.shopName}}"
					>
						{{item.shopName}}
						<view class="radiusBtn">{{item.number}}</view>
					</view>
				</block>
			</scroll-view>
			<scroll-view class="right" scroll-y="true" style="height: {{scrollHeight}}px;">
				<block wx:for="{{productList}}" wx:key="index">
					<product bind:showSku="handleSku" ctn="{{item}}" />
				</block>
			</scroll-view>
		</view>
		<view class="list-pay">
			<view>购物车</view>
			<view bindtap="handlePay">结算</view>
		</view>
	</view>
	<van-popup show="{{skuShow}}" bind:close="handleClose">
		<view style="width: 640rpx; padding: 20rpx;">
			<view style="text-align: center; font-size: 34rpx;">中力小金刚</view>
			<sku bind:modifyNumber="modifyNumber" productId="{{productId}}" />
		</view>
	</van-popup>
