<!--index.wxml-->
<view class="container">

<swiper indicator-dots="{{indicatorDots}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="{{index}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150"/>
    </swiper-item>
  </block>
</swiper>

<view class="productTitle box">
  <view class='name'>{{title}}</view> 
  <van-button size="small" open-type='share'><text  class='like'>分享</text><van-icon name="share" class='like'/></van-button>
</view>

<view class='box priceBox'>
  <van-row>
    <van-col span="5">
      <text>阿母价</text>
    </van-col>
    <van-col span="14">
      <text class='price1'>￥{{amPrice1}}~{{amPrice2}}</text>  
    </van-col>
    <van-col span="5" style="text-align:center">
      <text style='color:#9b9b9b;'>已售 {{saleNumber}}件</text>
    </van-col>
  </van-row>
  
  <view class='priceBox2'>
    <van-row>
      <van-col span="5">
        <text>代理价</text>
      </van-col>
      <van-col span="14">
        <text class='price2'>￥{{DLPrice1}}~{{DLPrice2}}</text> 
      </van-col>
      <van-col span="5" class="center">
        <view  class='tip'>阿母团购日</view>
      </van-col>
    </van-row> 
  </view>    
</view> 

<view class="box">
  <van-row>
    <van-col span="5">
      <text>优惠</text>
    </van-col>
    <van-col span="14">
      <text>阿母币可抵扣300~500元</text>  
    </van-col>
  </van-row>
  <view class='youhui'>
    <text style='padding-right:34rpx'>满16800减300券</text>
    <text>满26800减500券</text>
  </view>
  <van-row>
    <van-col span="5">
      <text>店铺活动</text>
    </van-col>
    <van-col span="19">
      <text>部分产品参加满500包邮</text><view class='lookProduct'>查看活动产品</view>
    </van-col>   
  </van-row>
</view>

<view class='box send'>
  <van-row>
    <van-col span="5">
      <text>配送</text>
    </van-col>
    <van-col span="14">
      <text>浙江安吉</text>至<text>广东广州</text>
    </van-col>
  </van-row>
  <view class='send2'>
    <van-row class="send2">
      <van-col span="5">
        <text>物流费</text>
      </van-col>
      <van-col span="19">
        <text>￥0.00</text>
        <text> 享受满五百包邮 (新疆西藏海南除外)</text>
      </van-col>
    </van-row>
  </view> 
</view> 

<view class="box send">
  <van-row>
  <view catchtap='showPopup'>
    <van-col span="5">
      <text>产品政策</text>
    </van-col>
    <van-col span="18">
      <text>XXXXXXXXXXXXXXXX</text>
    </van-col>
    <van-col span="1">
      <text> > </text>
    </van-col>
  </view>  
  </van-row>
  <view class='sevenDay'>
    <van-row>
      <van-col span="5">
        <text>产品承诺</text>
      </van-col>
      <van-col span="14">
        <text>7天无理由</text>
      </van-col>
    </van-row>
  </view>
  <van-row>
    <van-col span="5">
      <text>支付方式</text>
    </van-col>
    <van-col span="18">
      <text>承兑汇票.网银汇款.店铺余额.支付宝.微信</text>
    </van-col>
    <van-col span="1">
      <text> > </text>
    </van-col>
  </van-row>
</view>

<view class='box send'>
  <van-row>
  <navigator url='/pages/buy/buy?shopId={{shopId}}'>
    <van-col span="5">
      <text>选择</text>
    </van-col>
    <van-col span="18">
      <text>规格、交期、支付类型</text>
    </van-col>
    <van-col span="1">
      <text> > </text>
    </van-col>
  </navigator>  
  </van-row>
</view>

<view class="box shopName"> 
  <van-row>
  <navigator url='/pages/shopDetail/shopDetail?shopId={{shopId}}'>
    <van-col span="5">
      <image class='logo' src='/static/imgs/logo.png'></image>
    </van-col>
    <van-col span="14">
      <text style='font-weight:800;'>浙江中力机械有限公司</text>     
    </van-col>
    <van-col span="4">
      <text style='color:#fe0000;'>进店看看</text>
    </van-col>
    <van-col span="1">
      <text> > </text>
    </van-col>
  </navigator>  
  </van-row>
</view>

<view class="box"> 
  <view class='title'>
    <text>产品介绍</text>
    <image src='/static/imgs/titleBg.png'></image>
  </view>
  <view class='productImg'>
    <image mode="widthFix" src='https://dummyimage.com/684x1000/fb0a2a'></image>
  </view>

  <view class='title'>
    <text>规格与包装</text>
    <image src='/static/imgs/titleBg.png'></image>
  </view> 
  <view class='productImg'>
   <image mode="widthFix" src='https://dummyimage.com/750x600/fb0a2a'></image>
  </view>

  <view class='title'>
    <text>售后保障</text>
    <image src='/static/imgs/titleBg.png'></image>
  </view>
  <view class='productImg'>
   <image mode="widthFix" src='https://dummyimage.com/750x600/fb0a2a'></image>
  </view>
</view>

<view class='footer'>
  <van-row>
    <van-col span="4">
    <navigator url='/pages/index/index' open-type="switchTab">
      <view  class="button1">
        <van-icon name="wap-home" />
        <text>首页</text>
      </view>
    </navigator>      
    </van-col>
    <van-col span="4">
    <navigator url='/pages/cart/cart' open-type="switchTab">
      <view  class="button2">
        <van-icon name="cart" />
        <text>购物车</text>
      </view>
    </navigator>      
    </van-col>
    <van-col span="8">
    <navigator url='/pages/buy/buy'>
      <view class="button3">加入购物车</view>
    </navigator>   
    </van-col>
    <van-col span="8" class="button4">
    <navigator url='/pages/buy/buy'>
      <view class="button4">立即购买</view>
    </navigator>    
    </van-col>
  </van-row>
</view>

<!-- 弹框 -->
<van-popup show="{{ show }}" position="top" overlay="{{ true }}" bind:close="onClose" catchtouchmove="ture">
  {{content}}
</van-popup>

</view>