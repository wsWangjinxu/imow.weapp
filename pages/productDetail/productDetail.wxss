/**index.wxss**/
page{
  background-color: #f2f2f2;
  padding-bottom: 110rpx;
}

swiper{
  width: 100%;
  height: 750rpx;
}

swiper-item image{
  width: 100%;
  height: 100%;
}

.box{
  padding: 34rpx 36rpx;
  background-color: white;
  font-size: 28rpx;
  color: #3a3a3a;
}

.productTitle{
  margin-bottom:16rpx;
  display: flex;
  justify-content: space-between;
}

.productTitle .name{
  color:#313131;
  width: 580rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.productTitle van-button{
  margin-top: 10rpx;
}

.like{
  color: #fe0000;
}

.priceBox{
  border-bottom: 1px solid #cccccc; 
}

.priceBox2{
  margin-top: 22rpx;
}

.flexBox{
  display: flex;
  justify-content: space-between;
}

.price1{
  color:#323232;
  font-weight:600; 
  text-align:center;
}

.price2{
  color:#fe0000;
  font-weight:1200;
  font-size:30rpx
}

.tip{
  padding: 8rpx 16rpx;
  font-size: 18rpx;
  border: 1px #fe0000 solid;
  border-radius: 30rpx;
  color: #fe0000;
  font-weight: 600;
  width: 90rpx;
  margin: 0 auto;
}

.youhui{
  padding-left: 138rpx;
  color:#ff3233;
}

.coupon{
  margin-right:40rpx;
  width:200rpx;
  line-height: 60rpx;
  display: inline-block
}

.lookProduct{
  display: inline-block;
  text-decoration: underline;
  margin-left: 10rpx;
}

.send{
  margin-top:26rpx;
  margin-bottom:26rpx;
}

.send image{
  width:16rpx;
  height:16rpx;
}

.send2{
  margin-top:36rpx;
}

.textHidden{
  overflow: hidden;
  text-overflow: ellipsis; 
  -o-text-overflow: ellipsis;
  white-space:nowrap;
}

.sevenDay{
  margin: 38rpx 0;
}

.shopName{
  margin-top:16rpx;
  margin-bottom:16rpx; 
}

.shopName .arrow{
  width:16rpx;
  height:16rpx;
}

.logo{
  width: 102rpx;
  height: 38rpx;
  background-color: red;
}

.productImg{
  margin-top: 26rpx;
  margin-bottom: 26rpx;
  text-align:center;
}

.productImg image{
  width:100%;
}

.title{
  width: 413rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  margin: auto;
  font-size: 28rpx;
  font-weight: bold;
  position: relative;
}

.title image{
  width: 100%;
  height: 100%;
}

.title text{
  position: absolute;
  top:50%;
  left:50%;
  transform: translate(-50%, -50%);
}

