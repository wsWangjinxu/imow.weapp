<view wx:if="{{isLogin}}" class="my">
  <view class="userInfo">
    <navigator style="align-self:flex-end;color:#626262;" url="/pages/setting/setting"><van-icon name="setting"></van-icon></navigator> 
    <image src="{{avatarUrl}}" />
    <text>{{nickname}}</text>
  </view> 
  <view class="myOrder">
    <view class="title">
      <text>我的订单</text>
      <navigator url="/pages/order/order?state=全部">查看全部订单<van-icon name="arrow"></van-icon></navigator>
    </view>
    <view class="ctn">
      <navigator url="/pages/order/order?state=待付款">
        <van-icon name="pending-payment"></van-icon>
        <text>待付款</text>
      </navigator>
      <navigator url="/pages/order/order?state=待发货">
        <van-icon name="pending-deliver"></van-icon>
        <text>待发货</text>
      </navigator>
      <navigator url="/pages/order/order?state=待收货">
        <van-icon name="logistics"></van-icon>
        <text>待收货</text>
      </navigator>
    </view>
  </view>
  <view class="cell">
    <navigator url="/pages/addressList/addressList"><van-cell title="收货地址" border="{{ false }}" is-link></van-cell></navigator> 
  </view>
  <view class="cell">
    <van-cell title="我的拼团" border="{{ false }}" is-link></van-cell>
  </view> 
  <view class="cell">
    <navigator url="/pages/coupon/coupon"><van-cell title="优惠券" border="{{ false }}" is-link></van-cell></navigator> 
  </view>
  <!-- <view class="cell">
    <van-cell title="我的优惠券" border="{{ false }}" is-link></van-cell>
  </view> -->
</view>
<view wx:else class="loginPane">
  <view class="login">
    <input type="text" bindinput="handleAccount"  placeholder="  请输入阿母关联账号"/>
    <input type="text" bindinput="handlePassword" placeholder="  请输入密码" password/>
    <van-button type="danger" bindtap="login" style="width: 100%;margin-top: 30rpx;height: 80rpx;">立即登陆</van-button>
    <view class="text">忘记密码？</view>
  </view>
</view>

