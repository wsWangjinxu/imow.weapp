page {
  height: 100%;
}

.userInfo {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 34rpx;
  align-items: center;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.userInfo image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border:1px solid #333333;
}

.myOrder {
  background-color: #fff;
  padding: 36rpx;
}

.myOrder .title {
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 60rpx;
  align-items: center;
  border-bottom: 1px solid #cbcbcb;
  margin-top: -10rpx;
  padding-bottom: 20rpx;
}

.myOrder .title navigator {
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.ctn {
  display: flex;
  flex-direction: row;
  margin-bottom: -10rpx;
}

.ctn image{
  width: 60rpx;
  height: 50rpx;
  display: block;
  margin: 10rpx;
}

.ctn navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
  font-size: 50rpx;
}

.ctn navigator text {
  font-size: 30rpx;
}

.my .cell {
  margin-top: 20rpx;
}

.loginPane {
  height: 100%;
  background-color: #333333;
}

.login {
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 80%;
  margin-left: 10%;
}

.login input {
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.login input {
  height: 80rpx;
  width: 100%;
  text-align: center;
}

.login button {
  width: 100%;
}

.btn {
  width: 100%;
}