.join-ctn, .join-action {
  background-color: #fff;
  margin-top: 35rpx;
  padding: 20rpx 20rpx 50rpx 20rpx;
}

.join-ctn-title, .join-ctn-title {
  font-size: 34rpx;
  margin-bottom: 20rpx;
  text-align: left;
} 

.join-ctn {
  text-align: center;
}

.join-ctn image {
  width: 90%;
  margin: 20rpx auto;
}

.fixed-btn {
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  color: #5f5f5f;
  box-sizing: border-box;
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}

.fixed-btn > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #787878;
  background-color: #ffffff;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-top: 1px solid #787878;
}

.fixed-btn > view > text {
  font-size: 30rpx;
}

.fixed-btn .btn-item {
  flex: 1;
}

