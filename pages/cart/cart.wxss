/* 购物车 */
.title {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 110rpx;
  line-height: 110rpx;
  background-color: white;
  padding: 0rpx 10rpx;
}

.title > text {
  font-size: 40rpx;
}

.product-list product:last-child .product--product {
  border-bottom: none;
}

.shopList {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  font-size: 30rpx;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
  width: auto;
}

.shopList view {
  display: inline-block;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
