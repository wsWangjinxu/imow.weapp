.title {
  font-size: 36rpx;
  font-weight: bold;
  background-color: #fff;
  padding: 30rpx;
}

.credit {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  line-height: 1.6;
  padding: 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
}

.credit view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.credit view:first-child {
  padding-right: 20rpx;
}

.credit view:first-child text:first-child {
  font-size: 36rpx;
}

.credit view:first-child text:last-child {
  font-size: 40rpx;
  font-weight: bold;
}

.Info {
  display: flex;
  flex-direction: column;
}

.Info view {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.Info view text:first-child {
  flex: 1;
}