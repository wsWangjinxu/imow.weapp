/* 结算条 */
.settleBar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: white;
  border-bottom: 1px solid #cbcbcb;
}

.settleBar  text {
  flex: 3.5;
  font-size: 30rpx;
}

.settleBar  text:first-child {
  text-align: right;
  font-size: 26rpx;
  flex: 1;
}

.payBar {
  height: 90rpx;
  line-height: 80rpx;
  text-align: right;
  padding: 0 20rpx;
  background-color: #fff;
}
