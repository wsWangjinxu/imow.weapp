/* 结算条 */
.settleBar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  background-color: white;
  border-bottom: 1px solid #cbcbcb;
}

.settleBar  text {
  flex: 3.5;
  font-size: 30rpx;
}

.settleBar  text:first-child {
  text-align: right;
  font-size: 26rpx;
  flex: 1;
}

.payBar {
  height: 90rpx;
  line-height: 80rpx;
  text-align: right;
  padding: 0 20rpx;
  background-color: #fff;
}

.shopList {
  background-color: #f5f5f5;
}

.shopList .shopTitle--shopTitle {
  background-color: #fff;
}

.footer {
  height: 190rpx;
  margin-top: 20rpx;
  background-color: #fff;
  text-align: center;

}

.footer image {
  width: 440rpx;
  height: 100rpx;
  margin-top: 40rpx;
}