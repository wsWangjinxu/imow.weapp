/* 下拉框 */
.selectBox{
  background: #fff;
  width: 144rpx;
  border: 1px solid #cccccc;
  position: relative;
}

.select_img{
  display: block;
  transition:transform 0.3s;
  text-align: center;
  line-height: 40rpx;
  height: 33rpx;
  width: 33rpx;
  transform:rotate(90deg); 
  position: absolute;
  right: 0;
  top: 0
}


