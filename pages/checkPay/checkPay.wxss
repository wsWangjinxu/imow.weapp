/* 下拉框 */
.select_box{
  background: #fff;
  width: 144rpx;
  border: 1px solid #cccccc;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 33rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding-LEFT: 20rpx;
}
.select_text{
  font-size: 20rpx;
  font-weight: bold;
  flex: 1;
}
.select_img{
  display: block;
  transition:transform 0.3s;
  text-align: center;
  line-height: 40rpx;
  height: 33rpx;
  width: 33rpx;
}
.select_img_rotate{
  transform:rotate(90deg); 
}
.option_box{
  position: absolute;
  top: 34rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

